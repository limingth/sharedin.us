          <a href="/"> Reture to homepage </a>

          <h2>Search "<%= @tagname %>" </h2><br>
 

            <table width=100%>
            <hr>
              <tr>
                <td width=10%><h4>tag_id</td>
                <td width=30%><h4>user_id</td>
                <td width=20%><h4>user_name</td>
                <td width=40% align=right><h4>tag_name</td>
              </tr>

              <tr>
                <td><%= r.id %></td>
                <td>
                  <%= content_tag :strong, r.user_id, :class => 'pull-left text-middle' %>
                </td>
                <td>
                  <%= content_tag :strong, get_user_name(r.user_id), :class => 'pull-left text-middle' %>
                </td>
                <td>
                  <%= content_tag :span, r.name , :class => 'text-muted pad-10 text-middle' %>
                </td>
                
              </tr>
              <% end %>
            </table>


      </div>
    </div>

